	    '#rows' => $rows,
	    '#attributes' => $attributes,
		  '#sticky' => TRUE,
	  );
		print (drupal_render( 	  $variables ));
    print_r('<a name ="nrcstblbottom" class ="nrcstblbottom">.</a>');
	}else{
		return $rows;
	}

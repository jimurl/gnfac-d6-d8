function gnfac_d8_compile_regions($entity, $display_id = 'node.advisory.default'){ // $display_id will generally be 
	$markup = '';
	
	foreach ($entity->get('field_region_group_1') as $key => $region ){
		//kint($region);
    $fc_ids[$key] = $region->getValue()	;		
		$fc = FieldCollectionItem::load($fc_ids[$key]['value']);
		$fc_regions = $fc->field_applicable_regions->getValue();
		$fc_details = $fc->field_regional_discussion->getValue() ; 
		$fc_hazard = $fc->field_regional_hazard_rating->value;
		$fc_warning = $fc->field_avalanche_warning->value ? ' warning' : '' ;
		
		
		switch ( $display_id ){
		  case 'node.advisory.default':
			  $markup .= '<div class = "region-group'. $fc_warning.'" > ';
				$fc_haz_image =   !$fc_hazard ? '' :  $fc_haz_image = '<div class = "region hazard-rating-image" ><a href ="#" title = "'. $fc_hazard .' Avalanche Hazard" alt ="'. $fc_hazard .' Avalanche Hazard"><img src ="/images/hazard_ratings/simple/' .  $fc_hazard .'.png" class = "hazard-image-main"   /></a><br /></div>';
				$markup .=  $fc_haz_image. '<h3 class ="region"  >' . implode ( '</h3><h3 class ="region" >' , gnfac_region_groups_header_markup($fc_regions, 'links') ) .'</h3>';
				$markup .= '</div>';	
				if ( $fc_warning == ' warning' ){ $markup .= '<h3 class = "warning" >Avalanche Warning</h3>';}
				$render_format = $fc_details[0]['format'];
			break;
